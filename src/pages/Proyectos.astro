---
import Card from "../components/Card.astro";

const projects = [
  {
    id: 1,
    title: "Invitaciones Digitales",
    href: "https://soydev0123.netlify.app/",
    img: "/invitacion.png",
    technologies: ["astro", "tailwind", "Html", "CSS", "Js"],
  },
  {
    id: 2,
    title: "Aplicaciones Educativas",
    href: "https://github.com/IAMR23/AppEducacionContinuaESPE/tree/main",
    img: "/espe.png",
    technologies: ["Taiwind", "Firebase", "NextJS"],
  },
  {
    id: 3,
    title: "IntegraDent Servicios Dentales",
    href: "https://integradent.netlify.app/",
    img: "/integradent.png",
    technologies: ["Astro", "Html", "Css", "Js"],
  },
  {
    id: 4,
    title: "Villa del Mar",
    href: "https://villamari.netlify.app/",
    img: "/villa.png",
    technologies: ["Astro", "Html", "Css", "Js"],
  },
];
---

<section id="proyectos" class="bg-[#282A29]">
  <div class="px-15 py-5">
    <h1 class="text-blue-700 text-2xl font-bold subtitle">Mis proyectos</h1>
    <div class="w-[60px] bg-blue-600 h-[3px]"></div>
  </div>

  <div class="px-15 pb-10 grid grid-cols-2 gap-5">
    {
      projects.map((project) => (
        <Card
          title={project.title}
          href={project.href}
          img={project.img}
          technologies={project.technologies}
        />
      ))
    }
  </div>
</section>
