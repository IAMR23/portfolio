---
// Props
interface Props {
  title: string;
  href: string;
  img: string;
  technologies: string[];
}

const { title, href, img, technologies } = Astro.props;
---
<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class="group block rounded-2xl overflow-hidden shadow-xl transition transform hover:scale-[1.02] hover:shadow-2xl bg-gradient-to-br from-[#1F1B3A] to-[#2B254D]"
>
  <div class="relative">
    <img
      src={img}
      alt={title}
      class="w-full h-52 object-cover transition-all duration-300 group-hover:brightness-75"
    />
    <div class="absolute inset-0 flex items-end bg-gradient-to-t from-black/70 via-black/30 to-transparent p-4">
      <h3 class="text-white text-xl font-semibold group-hover:text-purple-300 transition-colors">
        {title}
      </h3>
    </div>
  </div>

  <div class="p-4 border-t border-white/10 bg-[#1D1A35]">
    <h4 class="text-sm text-gray-300 mb-2 tracking-wide uppercase">Tecnolog√≠as</h4>
    <ul class="flex flex-wrap gap-2">
      {
        technologies.map((tech) => (
          <li class="bg-white/10 text-white text-xs px-3 py-1 rounded-full backdrop-blur-md hover:bg-purple-500 hover:text-white transition">
            {tech}
          </li>
        ))
      }
    </ul>
  </div>
</a>
