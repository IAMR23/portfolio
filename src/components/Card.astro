---
// Props
interface Props {
  title: string;
  href: string;
  img: string;
  technologies: string[];
}

const { title, href, img, technologies } = Astro.props;
---

<div
  x-data="{ open: false }"
  class="rounded-lg border border-black bg-[#231E3E] text-white overflow-hidden transition-all duration-300"
>
  <button @click="open = !open" class="w-full text-left focus:outline-none">
    <img
      src={img}
      alt={title}
      class="w-full h-[250px] object-cover border-b border-gray-700"
    />
    <div class="p-4">
      <h3 class="text-lg font-bold">{title}</h3>
    </div>
  </button>

  <div
    x-show="open"
    x-transition
    class="p-4 border-t border-gray-700 bg-black bg-opacity-80"
  >
    <h4 class="text-sm font-semibold mb-2">Tecnolog√≠as:</h4>
    <ul class="flex flex-wrap gap-2">
      {
        technologies.map((tech) => (
          <li class="bg-gray-700 px-2 py-1 rounded-md text-xs">{tech}</li>
        ))
      }
    </ul>
  </div>
</div>

